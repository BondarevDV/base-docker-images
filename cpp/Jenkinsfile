properties([
        parameters([
        string(name: 'DOCKER_IMAGE_TAG', defaultValue: '0.0.1', description: 'Enter tag for image'),
        string(name: 'DOCKER_IMAGE_NAME', defaultValue: '0.0.1', description: 'Enter name for image'),
        string(name: 'DOCKERFILE_NAME', defaultValue: 'cpp/Dockerfile.OTUS', description: 'Enter path for Dockerfile  for image')
    ])
])

pipeline {
    agent any

    stages{
        stage("Prepare build image") {
            steps {
                sh "docker build -f ${DOCKERFILE_NAME} . -t ${DOCKER_IMAGE_NAME}:${DOCKER_IMAGE_BRANCH}"
            }
        }
    }
}

